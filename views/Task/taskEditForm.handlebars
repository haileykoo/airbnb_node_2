 <h2>Update Task</h2>
    <form method="POST" action="/task/update/{{_id}}?method=PUT">

        <label>Title</label>
        <input type="text" name="title" id="title" value="{{title}}" > <br><br>

        <label>Description</label>
        <textarea id="description" name="description">{{description}}</textarea><br><br>

        <label>Price</label>
        <input type="text" name="dueDate" id="dueDate" value="{{dueDate}}"><br><br>

        <label>Location</label>
        <select name="priority">
            <option value="Toronto">Toronto</option>
            <option value="Vancouver">Vancouver</option>
            <option value="Quebec">Quebec</option>
        </select>
        <br><br>

        <label>Availability</label>
        <select name="status">
            <option value="open">Now</option>
            <option value="hold">Fully booked</option>
            <option value="completed">N/A</option>
        </select>
        <br><br>

        <input type="submit" value="Update Task">
    </form>

