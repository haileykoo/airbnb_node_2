<h2>Task Dashboard</h2>
 
 <section class="tasks-container">
   

     <form method="POST" action="/task/search">
        <label>Search By</label>
        <select name="task-search">
                <option value="all">All tasks</option>
                <option value="toronto">Toronto</option>
                <option value="vancouver">Vancouver</option>
                <option value="quebec">Quebec</option>
        </select>
        <input type="submit" value="Search">
     </form> <br><br>

    
            {{#each data}}
                        <div class="item">
                        <img src="{{this.image}}" alt="rental place image" class="rental_img">
                        <h3 class="rental_name"> {{this.title}} </h3> 
                        <p class="category"> {{this.description}}</p>
                        <p class="price"> Price: 120 CAD/ a night</p>
                        <p class="price"> Location: Toronto </p>
                    </div>
                        <a href="/task/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/task/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                {{else}}
                        <p>No rooms in the database</p>

                {{/each}}
</section>

<div id="tasks-links-holder">
    <a href="/task/add">Add a Room</a>
</div>

